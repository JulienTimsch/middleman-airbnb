<div class="container">
  <div class="row">
    <% %w(paris berlin amsterdam barcelona rio lisbon tokyo london).each do |city| %>
    <div class="col-xs-12 col-sm-4">
      <!-- insert <div class="card"> -->
        <div class="card" style="background-image: url(https://kitt.lewagon.com/placeholder/cities/<%= city %>)">
          <h4 class="card-category"><%= city.capitalize %></h4>
          <p class="card-description"><%= city.capitalize %> is one of the most amazing cities on earth</p>
        </div>
      </div>
      <% end %>
    </div>
  </div>

